<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.FDSC.mapper.ElectricityPaymentMapper">

    <resultMap id="BaseResultMap" type="com.FDSC.entity.ElectricityPayment">
            <result property="uid" column="uid" jdbcType="INTEGER"/>
            <result property="money" column="money" jdbcType="DECIMAL"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="EpaymentDto" type="com.FDSC.controller.dto.ElectricityPaymentDto">
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="money" column="money" jdbcType="DECIMAL"/>
        <result property="status" column="status" jdbcType="TINYINT"/>
        <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
        <association property="user"
                     select="com.FDSC.mapper.UserMapper.selectById"
                     column="uid"
                     >
        </association>
    </resultMap>


    <sql id="Base_Column_List">
        uid,money,status
    </sql>
    <select id="getAllInfo" resultMap="EpaymentDto">
        select uid, money, status, createTime from sys_electricity_payment;
    </select>

</mapper>
